<div class="main p-3 background-color">
  <div class="container form">
    <form action = "/template" method = "POST" class="crearUsuario">
      <h1 class ="titulo-form"> Crear Encuesta</h1>
        <div class="mb-5 contenido-con-margen">
          <label for="titulo" class="form-label label-crearUsuario">Titulo de la encuesta</label>
          <input type="text" class="form-control input-crearUsuario" id="titulo" name="titulo">

          <label for="categoria" class="form-label label-crearUsuario">Categor√≠a</label>
            <select class="form-select form-select-sm" aria-label="Small select example" id="categoria" name="categoria">
                <% for(let categoria of categoriasMarca) { %>
                    <option value="<%= categoria.Categoria %>"><%= categoria.Categoria %>, <%= categoria.nombre_marca %> </option>
                <% } %>
            </select>  
            <input type="hidden" name="IDMarca" value="1">
        </div>
        <div class="btn-formUsuario">
            <button type="submit" class="btn btn-dark">Enviar</button>
        </div>
      </form>
  </div>
</div>

