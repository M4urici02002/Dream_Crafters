            <option> CRM </option>
          </select>

          <label for="inputUsuario" class="form-label label-crearUsuario">Eliminar privilegio</label>
          <select id="inputUsuario" class="form-control input-crearUsuario" name="rol">
            <option> Analítico</option>
            <option> Administrador </option>
            <option> CRM </option>
          </select>

          <label for="inputUsuario" class="form-label label-crearUsuario">Privilegios</label>
          <div class="card privilegio">
            <div class="card-body list-group-numbered">
                <li class="list-group-item">Exportar gráficas de análisis</li>
                <li class="list-group-item">Consultar reseñas por categoría</li>
            </div>
         </div>

        </div>
        
        <div class="btn-formUsuario">
            <button type="submit" class="btn btn-dark">Enviar</button>
        </div>
      </form>
  </div>
</div>

